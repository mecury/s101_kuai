<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp" 
    android:orientation="horizontal"
    android:background="#333333"
    android:layout_gravity="bottom"
    android:id="@+id/zhongju">
    
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout 
            android:id="@+id/shouye"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/main_bottom_tab_home_normal"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout 
            android:id="@+id/fenlei"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/main_bottom_tab_category_normal"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout 
            android:id="@+id/shaomiao"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/main_bottom_tab_search_normal"/>
        </LinearLayout>
    </LinearLayout>
   
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout 
            android:id="@+id/gouwuche"
            android:clickable="true"
            android:layout_width="60dp"
            android:focusable="true"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/main_bottom_tab_cart_normal"/>
        </LinearLayout>
    </LinearLayout>
   
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout 
            android:id="@+id/wode"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/main_bottom_tab_personal_normal"/>
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>
