<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:textSize="20dp"
               android:text="订单中心" />

           <LinearLayout 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#50ffff00"
               android:orientation="vertical">
               <LinearLayout 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <ImageView 
                       android:layout_width="30dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/android_personel_quickly_order"/>
	               <Button 
	                   android:id="@+id/wodeSelect"
	                   android:layout_width="match_parent"
	                   android:layout_height="wrap_content"
	                   android:background="@drawable/buttoncorners"
	                   android:text="待查询订单"/>
                   </LinearLayout>
                   
              <LinearLayout 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:orientation="horizontal">
                   <ImageView 
                       android:layout_width="30dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/android_personel_waitpay_order"/>
	               <Button 
	                   android:id="@+id/wodepayfor"
	                   android:layout_width="match_parent"
	                   android:layout_height="wrap_content"
	                   android:background="@drawable/buttoncorners"
	                   android:text="待付款订单"/>
                   </LinearLayout>
                <LinearLayout 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:orientation="horizontal">
                   <ImageView 
                       android:layout_width="30dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/android_personel_all_order"/>
	               <Button 
	                   android:id="@+id/wodeallgoods"
	                   android:layout_width="match_parent"
	                   android:layout_height="wrap_content"
	                   android:background="@drawable/buttoncorners"
	                   android:text="全部订单"/>
                   </LinearLayout> 
           </LinearLayout>
           <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:text="账户中心"
               android:layout_marginTop="10dp"/>
          	<LinearLayout 
          	    android:layout_width="match_parent"
          	    android:layout_height="wrap_content"
          	    android:background="#50ffff00"
               	android:orientation="vertical">
          	    <LinearLayout 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <ImageView 
                       android:layout_width="30dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/android_my_jd_discuss"/>
	               <Button 
	                   android:id="@+id/wodegoods"
	                   android:layout_width="match_parent"
	                   android:layout_height="wrap_content"
	                   android:background="@drawable/buttoncorners"
	                   android:text="商品评价"/>
                   </LinearLayout>
              <LinearLayout 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:orientation="horizontal">
                   <ImageView 
                       android:layout_width="30dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/android_my_jd_messages"/>
	               <Button 
	                   android:id="@+id/wodemessage"
	                   android:layout_width="match_parent"
	                   android:layout_height="wrap_content"
	                   android:background="@drawable/buttoncorners"
	                   android:text="消息中心"/>
                   </LinearLayout>
                <LinearLayout 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:orientation="horizontal">
                   <ImageView 
                       android:layout_width="30dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/android_my_jd_collects"/>
	               <Button 
	                   android:id="@+id/wodeattention"
	                   android:layout_width="match_parent"
	                   android:layout_height="wrap_content"
	                   android:background="@drawable/buttoncorners"
	                   android:text="我的关注"/>
                   </LinearLayout> 
          	</LinearLayout>
          	
          	<LinearLayout 
          	   android:layout_marginTop="25dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#50ffff00"
               android:orientation="vertical">
          	    <LinearLayout 
          	        android:layout_width="match_parent"
          	        android:layout_height="wrap_content"
          	        android:orientation="horizontal">
          	        <Button 
          	            android:id="@+id/wodeabout"
          	            android:layout_width="0dp"
          	            android:layout_weight="15"
          	            android:layout_height="wrap_content"
          	            android:background="@drawable/buttoncorners"
          	            android:text="关于"/>
          	       <!--  <ImageView 
          	            android:layout_width="0dp"
          	            android:layout_weight="1"
          	            android:layout_height="match_parent"
          	            android:layout_marginTop="5dp"
          	            android:layout_marginBottom="5dp"
          	            android:background="@drawable/android_list_idex"/> -->
          	    </LinearLayout>
          	    <LinearLayout 
          	        android:layout_width="match_parent"
          	        android:layout_height="wrap_content"
          	        android:layout_marginTop="2dp"
          	        android:orientation="horizontal">
          	        <Button 
          	            android:layout_width="0dp"
          	            android:layout_weight="15"
          	            android:layout_height="wrap_content"
          	            android:background="@drawable/buttoncorners"
          	            android:text="检查更新"/>
          	      <!--   <ImageView 
          	            android:layout_width="0dp"
          	            android:layout_weight="1"
          	            android:layout_height="match_parent"
          	            android:layout_marginTop="5dp"
          	            android:layout_marginBottom="5dp"
          	            android:background="@drawable/android_list_idex"/> -->
          	    </LinearLayout>
          	    <LinearLayout 
          	        android:layout_width="match_parent"
          	        android:layout_height="wrap_content"
          	        android:layout_marginTop="2dp"
          	        android:orientation="horizontal">
          	        <Button 
          	            android:id="@+id/wodeadvice"
          	            android:layout_width="0dp"
          	            android:layout_weight="15"
          	            android:layout_height="wrap_content"
          	            android:background="@drawable/buttoncorners"
          	            android:text="意见反馈"/>
          	        <!-- <ImageView 
          	            android:layout_width="0dp"
          	            android:layout_weight="1"
          	            android:layout_height="match_parent"
          	            android:layout_marginTop="5dp"
          	            android:layout_marginBottom="5dp"
          	            android:background="@drawable/android_list_idex"/> -->
          	    </LinearLayout>
          	</LinearLayout>
          	
          	<Button 
          	    android:id="@+id/wodequit"
          	    android:layout_width="match_parent"
          	    android:layout_height="wrap_content"
          	    android:layout_margin="20dp"
          	    android:background="@drawable/buttoncorners"
          	    
          	    android:text="退出登录"/>
       </LinearLayout>
   </ScrollView>
</LinearLayout>
